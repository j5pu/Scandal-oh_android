<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="#cdcdcd" >

    <LinearLayout
        android:id="@+id/ll_main_action_bar_1"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center_vertical|center_horizontal" >

                <Button
                    android:id="@+id/but_action_bar_happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/humor" />

                <Button
                    android:id="@+id/but_action_bar_angry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/denuncia" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5" >

                <LinearLayout
                    android:id="@+id/ll_main_refresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ProgressBar
                        android:id="@+id/prog_refresh_action_bar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_actionbar_updatelist"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/recarga_selector"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_main_take_photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_actionbar_takephoto"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/mas" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
