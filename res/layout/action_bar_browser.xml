<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="@color/blanco" >

    <RelativeLayout
        android:id="@+id/rl_action_bar_main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_browser_compartir"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/compartir_negro" />

        <ImageView
            android:id="@+id/img_browser_cancel"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/img_browser_compartir"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/img_browser_compartir"
            android:src="@drawable/recargar_negro" />

        <ImageView
            android:id="@+id/img_browser_forward"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/img_browser_cancel"
            android:layout_alignParentTop="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/img_browser_cancel"
            android:src="@drawable/flecha_adelante_gris" />

        <ImageView
            android:id="@+id/img_browser_backk"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/img_browser_forward"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/img_browser_forward"
            android:src="@drawable/flecha_atras_gris" />
        
    </RelativeLayout>

</RelativeLayout>