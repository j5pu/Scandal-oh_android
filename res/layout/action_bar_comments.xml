<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="@color/azul_verdoso" >

    <LinearLayout
        android:id="@+id/ll_browser_action_bar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_actionbar_comments_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/img_lastcomment_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ab_back_holo_light_am" />

            <com.applidium.shutterbug.FetchableImageView
                android:id="@+id/img_actionbar_comments_photo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/flag_eh"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_actionbar_comments_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/blanco" />
        
    </LinearLayout>

</RelativeLayout> 