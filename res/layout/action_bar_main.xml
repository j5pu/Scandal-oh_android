<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="@color/blanco" >

    <RelativeLayout
        android:id="@+id/rl_action_bar_main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_action_bar_num_notis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="3"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/sp_categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txt_action_bar_num_notis" />

        <LinearLayout
            android:id="@+id/ll_main_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="22dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_actionbar_takephoto"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:src="@drawable/clip_negro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/ll_main_take_photo"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/prog_refresh_action_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_actionbar_updatelist"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/actualizar_negro" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>