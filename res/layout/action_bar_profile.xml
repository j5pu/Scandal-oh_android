<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="@color/blanco" >

    <RelativeLayout
        android:id="@+id/rl_action_bar_main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_perfil"
            style="@style/ActionBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle=""
            android:text="@string/perfil" />

        <LinearLayout
            android:id="@+id/ll_profile_seguir_siguiendo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/img_profile_seguir_siguiendo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/tick_verde" />

            <TextView
                android:id="@+id/txt_profile_seguir_siguiendo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/siguiendo_may"
                android:textColor="@color/verde"
                android:textSize="19sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="@string/configuracion"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>