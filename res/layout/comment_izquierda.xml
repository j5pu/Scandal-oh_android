<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="top|center_horizontal"
            android:orientation="vertical" >

            <com.bizeu.escandaloh.util.CircularImageView
                android:id="@+id/img_comment_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icono_app"
                android:gravity="top" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_escandalo_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:src="@drawable/triangulo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:background="@drawable/comentario_curvo_izquierda"  >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="left"
                android:gravity="left" >

                <ImageView
                    android:id="@+id/img_comment_socialnetwork"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/user_rosa"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/txt_comment_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical"
                    android:text="alejandro.leonrodriguez.7"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_comment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="12-02-2014"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="comentasgfssgfsgfsfgfsdgfsgsgsrio prueba"
                android:textColor="@color/gris_oscuro"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>