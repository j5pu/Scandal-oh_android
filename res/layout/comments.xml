<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comments_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_medio" >

        <ListView
            android:id="@+id/list_comments_listcomments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0px"
            android:layout_above="@+id/ll_comments_write_comment">
        </ListView>

        <LinearLayout
            android:id="@+id/ll_comments_write_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_comments_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:ems="10"
                android:maxLines="6"
                android:hint="@string/escribe_un_comentario"
                android:textColor="@color/gris_oscuro" >
            </EditText>

            <LinearLayout
                android:id="@+id/ll_comments_send"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/avion" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
