<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".DemoActivity" >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        sothree:collapsedHeight="105dp"
        sothree:shadowHeight="4dp" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.applidium.shutterbug.FetchableImageView
                android:id="@+id/img_escandalo_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/emoticono"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="57dp"
                android:src="@drawable/reloj_rosa" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:layout_toLeftOf="@+id/txt_escandalo_date"
                android:src="@drawable/reloj_rosa" />

            <TextView
                android:id="@+id/txt_escandalo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_escandalo_name_user"
                android:layout_alignBottom="@+id/txt_escandalo_name_user"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/imageView2"
                android:text="16-01-2014"
                android:textColor="@color/morado"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="59dp"
                android:layout_toLeftOf="@+id/textView3"
                android:src="@drawable/ojo_rosa" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_escandalo_date"
                android:layout_alignBottom="@+id/txt_escandalo_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:text="1234"
                android:textColor="@color/morado"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_escandalo_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/emoticono"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView3"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Soy un tÃ­tulo para la vista del carrusel de ScandalOh con 75 caracteres !!!"
                android:textColor="@color/morado"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_below="@+id/emoticono"
                android:src="@drawable/corazon" />

            <ImageView
                android:id="@+id/img_escandalo_compartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="18dp"
                android:src="@drawable/compartir" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txt_escandalo_titulo"
                android:layout_marginRight="16dp"
                android:layout_marginTop="122dp"
                android:text="0000"
                android:textColor="@color/blanco"
                android:textSize="9sp" />

            <ImageView
                android:id="@+id/img_escandalo_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/altavoz"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_escandalo_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_escandalo_titulo"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="55dp"
                android:layout_toRightOf="@+id/emoticono"
                android:text="alejandro.leonrodriguez.7"
                android:textColor="@color/morado"
                android:textSize="10sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#883d99b7"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_flecha"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_weight="3"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/flecha_arriba" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|right"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_num_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="33 comentarios"
                        android:textSize="10sp"
                        android:textColor="@color/blanco" />

                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/lv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#FFCC00" >
            </ListView>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>