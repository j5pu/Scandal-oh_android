<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_escandalo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".DemoActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="79dp"
            android:layout_toRightOf="@+id/emoticono"
            android:background="#CCCCCC" />

        <com.applidium.shutterbug.FetchableImageView
            android:id="@+id/img_escandalo_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <com.bizeu.escandaloh.util.CircularImageView
            android:id="@+id/emoticono"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/avatar_circular"
            android:scaleType="centerInside"
            android:src="@drawable/avatar_defecto" />

        <com.applidium.shutterbug.FetchableImageView
            android:id="@+id/img_escandalo_favicon"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="65dp"
            android:layout_toLeftOf="@+id/img_escandalo_fuente"
            android:src="@drawable/icono_app"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/img_escandalo_fuente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_escandalo_name_user"
            android:layout_alignBottom="@+id/txt_escandalo_name_user"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="6dp"
            android:text="www.soyunafuentelarga.com"
            android:textColor="@color/morado"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_escandalo_titulo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="2"
            android:text="Soy un tÃ­tulo para la vista del carrusel de ScandalOh con 75 caracteres !!!"
            android:textColor="@color/gris_oscuro"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_escandalo_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/altavoz_azul"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_escandalo_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_escandalo_favicon"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/img_escandalo_tipo_usuario"
            android:text="alejandro.leonrodriguez.7"
            android:textColor="@color/morado"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_escandalo_tipo_usuario"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/txt_escandalo_name_user"
            android:layout_toRightOf="@+id/emoticono"
            android:src="@drawable/s_rosa" />

        <ImageView
            android:id="@+id/img_escandalo_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_escandalo_fuente"
            android:layout_alignTop="@+id/img_escandalo_foto"
            android:layout_marginTop="13dp"
            android:src="@drawable/like_azul" />

        <TextView
            android:id="@+id/txt_escandalo_num_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_escandalo_like"
            android:layout_alignLeft="@+id/img_escandalo_like"
            android:layout_alignRight="@+id/img_escandalo_like"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="0000"
            android:textColor="@color/blanco"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/img_escandalo_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_escandalo_like"
            android:layout_below="@+id/img_escandalo_like"
            android:layout_marginTop="11dp"
            android:src="@drawable/dislike_azul" />

        <TextView
            android:id="@+id/txt_escandalo_num_dislikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_escandalo_dislike"
            android:layout_alignLeft="@+id/img_escandalo_dislike"
            android:layout_alignRight="@+id/img_escandalo_dislike"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="0000"
            android:textColor="@color/blanco"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/img_escandalo_compartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img_escandalo_dislike"
            android:layout_below="@+id/img_escandalo_dislike"
            android:layout_marginTop="13dp"
            android:src="@drawable/compartir" />
    </RelativeLayout>

</RelativeLayout>