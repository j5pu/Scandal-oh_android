<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_menu_lateral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#E8dEdEdE"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3.5"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <com.bizeu.escandaloh.util.CircularImageView
                android:id="@+id/img_mLateral_avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/avatar_mas" />

            <TextView
                android:id="@+id/txt_lateral_nombreusuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="alejandro.leonrodriguez.8"
                android:textColor="@color/morado"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <LinearLayout
                android:id="@+id/ll_mLateral_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp" >

                <ImageView
                    android:id="@+id/img_escandalo_like"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/campana" />

                <TextView
                    android:id="@+id/txt_profile_compartir_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="@string/notificaciones"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mLateral_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp" >

                <ImageView
                    android:id="@+id/img_escandalo_dislike"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/mundo" />

                <TextView
                    android:id="@+id/img_escandalo_fuente"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="PaÃ­s"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txt_mLateral_numNotificaciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:paddingLeft="10dp"
                    android:textColor="@color/morado"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mLateral_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp" >

                <ImageView
                    android:id="@+id/img_escandalo_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:src="@drawable/perfil_azulverdoso" />

                <TextView
                    android:id="@+id/txt_profile_compartir_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="@string/perfil"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mLateral_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/login" />

                <TextView
                    android:id="@+id/txt_profile_valoranos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="@string/iniciar_sesion"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mLateral_ajustes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp" >

                <ImageView
                    android:id="@+id/img_escandalo_compartir"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/ajustes" />

                <TextView
                    android:id="@+id/txt_mLateral_ajustes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="2dp"
                    android:text="@string/ajustes"
                    android:textColor="@color/azul_verdoso"
                    android:textSize="22sp" />
            </LinearLayout>

            <ExpandableListView
                android:id="@+id/explist_mLateral_filtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ExpandableListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
