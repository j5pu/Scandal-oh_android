<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_escandalo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".DemoActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.applidium.shutterbug.FetchableImageView
            android:id="@+id/img_escandalo_foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@color/blanco" />

        <ImageView
            android:id="@+id/img_escandalo_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/altavoz_azul"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/prog_escandalo_loading_audio"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_escandalo_lastcomment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#88000000"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_escandalo_com_izquierda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical" >

                        <com.bizeu.escandaloh.util.ImageViewRounded
                            android:id="@+id/img_comment_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:src="@drawable/avatar_defecto" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_escandalo_lastcomment_info_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="3.90"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top" >

                            <ImageView
                                android:id="@+id/img_lastcomment_socialnetwork"
                                android:layout_width="11dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/facebook_gris"  />

                            <TextView
                                android:id="@+id/txt_comment_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:gravity="center_vertical"
                                android:text="joseantonio.puertolasmontanes"
                                android:textColor="#aaaaaa"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_comment_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:paddingLeft="1dp"
                            android:text="coscosff sdfdfdsd asdfadsasdfadfafddfadfafsdf"
                            android:textColor="@color/blanco"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_comment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12-02-2014"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#aaaaaa"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:gravity="center_horizontal" >

                            <ImageView
                                android:id="@+id/img_profile_picture"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="29dp"
                                android:src="@drawable/flecha_blanca_derecha" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_alignRight="@+id/img_profile_picture"
                                android:layout_alignTop="@+id/img_profile_picture"
                                android:layout_marginRight="19dp"
                                android:src="@drawable/comentario_blanco" />

                            <TextView
                                android:id="@+id/txt_lastcomment_num_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/imageView2"
                                android:layout_alignRight="@+id/imageView2"
                                android:layout_centerVertical="true"
                                android:gravity="center_horizontal"
                                android:text="33"
                                android:textColor="@color/gris_oscuro"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignTop="@+id/img_escandalo_foto"
            android:layout_toRightOf="@+id/emoticono"
            android:background="#CCCCCC" />

        <TextView
            android:id="@+id/txt_escandalo_titulo"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#33000000"
            android:gravity="center_horizontal|center_vertical"
            android:maxLines="2"
            android:text="Soy un tÃ­tulo para la vista del carrusel de ScandalOh con 75 caracteres !!!"
            android:textColor="@color/blanco"
            android:textSize="@dimen/text_title_size"
            android:textStyle="bold" />

        <com.applidium.shutterbug.FetchableImageView
            android:id="@+id/img_escandalo_favicon"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@+id/txt_escandalo_titulo"
            android:layout_toLeftOf="@+id/img_escandalo_fuente"
            android:layout_marginRight="5dp"
            android:src="@drawable/icono_app"
            android:visibility="visible" />

        <TextView
            android:id="@+id/img_escandalo_fuente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/img_escandalo_favicon"
            android:text="soyunafuuentelarrga"
            android:layout_marginRight="5dp"
            android:textColor="@color/morado"
            android:textSize="10sp"
            android:textStyle="bold" />

        <com.bizeu.escandaloh.util.ImageViewRounded
            android:id="@+id/emoticono"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:scaleType="fitXY"
            android:src="@drawable/avatar_defecto" />

        <ImageView
            android:id="@+id/img_escandalo_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/emoticono"
            android:src="@drawable/like_azul" />

        <ImageView
            android:id="@+id/img_escandalo_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_escandalo_num_likes"
            android:layout_marginRight="5dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/dislike_azul" />

        <ImageView
            android:id="@+id/img_escandalo_compartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_escandalo_num_dislikes"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/compartir_azul" />

        <TextView
            android:id="@+id/txt_escandalo_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_escandalo_titulo"
            android:layout_toRightOf="@+id/img_escandalo_tipo_usuario"
            android:layout_marginLeft="5dp"
            android:text="alejandro.leonrodriguez.7"
            android:textColor="@color/morado"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_escandalo_tipo_usuario"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/txt_escandalo_name_user"
            android:layout_toRightOf="@+id/emoticono"
            android:src="@drawable/s_rosa" />

        <TextView
            android:id="@+id/txt_escandalo_num_likes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_escandalo_like"
            android:layout_alignLeft="@+id/img_escandalo_like"
            android:layout_alignRight="@+id/img_escandalo_like"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="0000"
            android:textColor="@color/blanco"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/txt_escandalo_num_dislikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_escandalo_dislike"
            android:layout_alignLeft="@+id/txt_escandalo_num_likes"
            android:layout_alignRight="@+id/img_escandalo_dislike"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="0000"
            android:textColor="@color/blanco"
            android:textSize="8sp" />

    </RelativeLayout>

</RelativeLayout>