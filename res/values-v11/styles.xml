
<!-- API 11 theme customizations -->
<resources>     <!-- the theme applied to the application or activity -->    <style name="Theme.app" parent="@style/Theme.Sherlock.Light">        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>        <item name="android:actionBarTabTextStyle">@style/CustomTabTextStyle</item>                 </style>    <!-- ActionBar tabs styles -->    <style name="MyActionBarTabs" parent="@style/Widget.Sherlock.ActionBar.TabView">        <!-- tab indicator -->        <item name="android:background">@drawable/tab_indicator_ab_mytabsstyle</item>    </style>           <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Holo">        <item name="android:textColor">@color/gris_oscuro</item>    </style></resources>

