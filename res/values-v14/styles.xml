<!-- API 14 theme customizations -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- the theme applied to the application or activity -->
    <style name="Theme.app" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:actionBarTabTextStyle">@style/CustomTabTextStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mytabsstyle</item>
        <item name="background">@drawable/tab_indicator_ab_mytabsstyle</item>
    </style>

    <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mytabsstyle</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mytabsstyle</item>
        <item name="android:background">@color/azul_verdoso</item>

    </style>
    

    
</resources>