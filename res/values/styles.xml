<resources xmlns:android="http://schemas.android.com/apk/res/android">    <style name="Theme.app" parent="@style/Theme.Sherlock.Light"> <!-- Support library compatibility -->        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>        <item name="actionBarTabTextStyle">@style/CustomTabTextStyle</item>        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>    </style>         <!-- ActionBar tabs styles -->    <style name="MyActionBarTabs" parent="@style/Widget.Sherlock.ActionBar.TabView"> <!-- tab indicator -->        <item name="android:background">@drawable/tab_indicator_ab_mytabsstyle</item> <!-- Support library compatibility -->        <item name="background">@drawable/tab_indicator_ab_mytabsstyle</item>    </style>        <!--  ActionBar tabs text styles -->    <style name="CustomTabTextStyle" parent="Widget.Sherlock.ActionBar.TabText">        <item name="android:textColor">@color/gris_oscuro</item>        <item name="android:gravity">center</item>    </style>    <!--  ActionBar styles -->    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">        <item name="background">@color/gris_action_bar_2</item>        <item name="backgroundStacked">@drawable/ab_stacked_solid_mytabsstyle</item>    </style></resources>