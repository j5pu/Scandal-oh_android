<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="screen" >

    <PreferenceCategory
        android:key="audioCategory"
        android:title="Audio" >
        <CheckBoxPreference
            android:key="autoreproduccion"
            android:summary="@string/reproduce_el_audio_automaticamente"
            android:title="@string/autoreproduccion"/>
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="notificationsCategory"
        android:title="@string/notificaciones" >
        <CheckBoxPreference
            android:key="notifications"
            android:title="@string/recibir_notificaciones"
            android:defaultValue="true"/>
    </PreferenceCategory>

</PreferenceScreen>